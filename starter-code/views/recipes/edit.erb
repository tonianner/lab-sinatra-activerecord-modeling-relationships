<h2>Edit Recipe</h2>

<form action="/recipes/<%= "#{@recipe.id}" %>" method="post">
  <label for="recipe[title]">Title:</label>
  <input name="recipe[title]" value='<%= "#{@recipe.title}" %>'>

  <label for="recipe[description]">Description:</label>
  <input name="recipe[description]" style="height: 60px" value='<%= "#{@recipe.description}" %>'>

  <label for="recipe[servings]">Servings:</label>
  <input name="recipe[servings]" value='<%= "#{@recipe.servings}" %>'>

  <label for="course[title]">Course: </label>
  <select class="form-control" type="text" name="recipe[course_id]" value="<%= @recipe.course_id %>">
    <option value="1">Course 1</option>
    <option value="2">Course 2</option>

    <!-- doesn't pre-select the course when editing -->
  </select>
  <br>

 <input type="submit" value="Save">
</form>

